-- FPS, Ping, dan Lama di Server ke WindUI Paragraph

local RunService = game:GetService("RunService")
local Stats = game:GetService("Stats")

local displayFPS = 0
local accTime, accFrames = 0, 0
local smoothing = 0.15

-- Catat waktu join server
local joinTime = tick()

-- Buat Paragraph di tab Active
local statusParagraph = Tabs.Active:Paragraph({
    Title = "Status Player",
    Desc = "FPS: ...\nPing: ...\nTime: ..."
})

-- Fungsi format waktu (hh:mm:ss)
local function formatTime(seconds)
    local h = math.floor(seconds / 3600)
    local m = math.floor((seconds % 3600) / 60)
    local s = math.floor(seconds % 60)
    return string.format("%02d:%02d:%02d", h, m, s)
end

-- Update tiap frame
RunService.RenderStepped:Connect(function(dt)
    accTime = accTime + dt
    accFrames = accFrames + 1

    if accTime >= 0.5 then
        local instantFPS = accFrames / accTime
        displayFPS = displayFPS + (instantFPS - displayFPS) * smoothing

        -- Ambil ping (ms)
        local ping = Stats.Network.ServerStatsItem["Data Ping"]:GetValue()

        -- Lama waktu di server
        local elapsed = tick() - joinTime
        local timePlayed = formatTime(elapsed)

        -- Update Paragraph WindUI
        statusParagraph:SetDesc(
            "FPS: " .. math.floor(displayFPS + 0.5) ..
            "\nPing: " .. math.floor(ping) .. " ms" ..
            "\nTime: " .. timePlayed
        )

        accTime = 0
        accFrames = 0
    end
end)

Tabs.Active:Section({ Title = "Event" })

local statusLabel = Tabs.Active:Paragraph({
    Title = "Event Status",
    Desc = "Waiting for data..."
})

-- fungsi cek child, bisa langsung di Props atau Props.Props
local function getHunt(name)
    local obj = workspace.Props:FindFirstChild(name)
    if obj then return obj end
    local nested = workspace.Props:FindFirstChild("Props")
    if nested then
        return nested:FindFirstChild(name)
    end
    return nil
end

task.spawn(function()
    while task.wait(1) do
        local statusText = {}

        -- cek Megalodon Hunt
        if getHunt("Megalodon Hunt") then
            table.insert(statusText, "‚úÖ Megalodon Hunt")
        else
            table.insert(statusText, "‚ùå Megalodon Hunt")
        end

        -- cek Shark Hunt
        if getHunt("Shark Hunt") then
            table.insert(statusText, "‚úÖ Shark Hunt")
        else
            table.insert(statusText, "‚ùå Shark Hunt")
        end

        -- cek Ghost Shark Hunt
        if getHunt("Ghost Shark Hunt") then
            table.insert(statusText, "‚úÖ Ghost Shark Hunt")
        else
            table.insert(statusText, "‚ùå Ghost Shark Hunt")
        end

        -- cek Worm Hunt (Model.Part)
        local model = getHunt("Model")
        if model and model:FindFirstChild("Part") then
            table.insert(statusText, "‚úÖ Worm Hunt")
        else
            table.insert(statusText, "‚ùå Worm Hunt")
        end

        statusLabel:SetDesc(table.concat(statusText, "\n"))
    end
end)


local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

local savedCFrame -- posisi awal
local bv, bg -- body movers
local runningChecks = {} -- status pengecekan tiap toggle

-- fungsi freeze
local function freezeHumanoidRootPart(part)
    bv = Instance.new("BodyVelocity")
    bv.Velocity = Vector3.new(0, 0, 0)
    bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
    bv.Parent = part

    bg = Instance.new("BodyGyro")
    bg.CFrame = part.CFrame
    bg.MaxTorque = Vector3.new(1e9, 1e9, 1e9)
    bg.P = 1e5
    bg.Parent = part
end

-- fungsi unfreeze
local function unfreeze()
    if bv then bv:Destroy() bv = nil end
    if bg then bg:Destroy() bg = nil end
end

-- fungsi umum: teleport + freeze
local function tpAndFreeze(target)
    savedCFrame = hrp.CFrame
    hrp.CFrame = target.CFrame + Vector3.new(0, 5, 0)
    freezeHumanoidRootPart(hrp)
end

local function backToSaved()
    unfreeze()
    if savedCFrame then
        hrp.CFrame = savedCFrame
        savedCFrame = nil
    end
end

-- fungsi cek otomatis
local function autoCheck(name, path)
    -- stop dulu kalau ada loop lama
    if runningChecks[name] then
        runningChecks[name] = false
    end

    runningChecks[name] = true
    task.spawn(function()
        while runningChecks[name] do
            task.wait(1)
            if not path or not path.Parent then
                backToSaved()
                runningChecks[name] = false
                break
            end
        end
    end)
end

-- ü¶à Shark Hunt
Tabs.Active:Toggle({
    Title = "Teleport To Shark Hunt",
    Value = false,
    Callback = function(state)
        if state then
            local props = workspace:FindFirstChild("Props")
            if props then
                local obj = props:FindFirstChild("Shark Hunt")
                if obj and obj:FindFirstChild("Part") then
                    tpAndFreeze(obj.Part)
                    autoCheck("Shark Hunt", obj.Part)
                end
            end
        else
            runningChecks["Shark Hunt"] = false
            backToSaved()
        end
    end
})

-- üëª Ghost Shark Hunt
